<%= form_for @user do |f| %>
  <% if @website.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@website.errors.count, "error") %> prohibited this website from being saved:</h2>

      <ul>
      <% @website.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :permalink %><br>
    <%= f.text_field :permalink %>
  </div>
	
	<% unless @website.new_record? %>
		<div class="field">
			<%= f.label :default_page_id %><br>
			<%= f.collection_select :default_page_id, @website.pages, :id, :title %>
		</div>
	<% end %>
	
  <div class="actions">
    <%= f.submit "Save Website", class: "big green button" %>
  </div>
<% end %>
