<%= form_for @user, url: multicreate_contacts_path, method: :post, html: { class: "contacts_format contacts_format_upload" } do |f| %>

<div class="field">
    <%= f.label :file, "You can either upload a file of your contacts (CSV, Microsoft Excel):" %><br>
    <%= link_to "Click Here to download a sample file.".html_safe, "/csvs/sample.csv", class: "small_link" %><br><br>
    <%= f.file_field :file %>
  </div>

  <%= f.hidden_field :overwrite, value: false %>
  <%= hidden_field_tag :contacts_format, "upload" %>

  <%= f.submit "Upload File", class: "big green button" %>

<% end %>