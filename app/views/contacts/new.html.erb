<%= form_for current_user, url: contacts_path, method: :post do |f| %>
  
  <%= f.label :file, "You can either upload a file of your contacts (CSV, Microsoft Excel):" %><br>
  <%= f.file_field :file %>

  <hr />

  <%= f.label :blob, "Or you can manually upload:" %><br>
  <%= f.text_area :blob %>
  
  <hr />
  
  <%= f.check_box :overwrite %>
  <%= f.label :overwrite, "Overwrite existing contacts." %>
  
  <hr />
  
  <%= f.submit "Add Contacts" %>

<% end %>