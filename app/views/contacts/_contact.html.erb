<% cache [current_user, contact] do %>
  <%= content_tag_for :tr, contact do %>
    <td class="name"><%= link_to contact.name, contact %></td>
    <% @fields.each do |field| %>
      <% if field.data_type == "datetime" %>
        <td><%= link_to Formatter.format("date", contact.data[field.permalink]).to_s, contact %></td>
      <% elsif field.data_type == "boolean" %>
        <td><%= link_to Formatter.format("boolean_icon", contact.data[field.permalink]).html_safe, contact, class: "center" %></td>
      <% else %>
        <td><%= link_to contact.data[field.permalink].to_s, contact %></td>
      <% end %>
    <% end %>
  <% end %>
<% end %>