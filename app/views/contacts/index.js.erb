<% if params[:from_sidebar] && params[:page] == 1 %>
  $("#contacts tbody").html("")
<% end %>

$("<%= j render @contacts %>").appendTo("#contacts tbody")
$(".contacts_search_count").text("<%= @all_contacts.count %>")

<% if @contacts.next_page %>
  $(".pagination").replaceWith("<%= j will_paginate(@contacts) %>");
<% else %>
  $(".pagination").html("");
<% end %>

$(window).scroll()