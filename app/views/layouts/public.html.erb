<!DOCTYPE html>
<html>
<head>
  <title>Touchbase</title>
  <%= stylesheet_link_tag    "public", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "public", "data-turbolinks-track" => true %>
	<meta name="viewport" content="initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-status-bar-style" content="black" />
	<%= tag :link, rel: "apple-touch-icon", href: "/images/icon.png" %>
  <%= csrf_meta_tags %>
</head>
<body id="<%= controller_name %>_<%= action_name %>" class="public">
  
  <div id="loading"></div>

  <div id="topbar">
    <div class="container">
      <h1><%= link_to image_tag("logo.png"), root_path %></h1>
    
      <% if request.path == new_user_session_path %>
        <%= link_to "Sign Up", root_path, class: "small button green right" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "small button green right" %>
      <% end %>
    
      <div class="clear"></div>
    </div>
  </div>
  
  <div id="yield" class="container">
    <%= yield %>
  </div>

</body>
</html>
