<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :content, "What needs to be done?" %><br>
    <%= f.text_area :content, class: "full_width" %>
  </div>
  
  <div class="field">
    <%= f.label :date, "What day does it need to be done?" %><br>
    <%= f.text_field :date, value: Time.zone.now.strftime("%B %-d, %Y"), class: "datepicker full_width" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Save Task", class: "blue button" %>
    <%= link_to "Cancel", :back, class: "cancel" %>
  </div>
<% end %>
