<tr>
  <td>
    <%= f.text_field :title, class: "title full_width" %>
    <%= f.hidden_field :permalink, class: "permalink" %>
		<%= f.hidden_field :ordinal, class: "ordinal" %>
  </td>
  <td class="center"><%= f.select :data_type, options_for_select([["Text", "string"], ["Number", "integer"], ["Yes/No", "boolean"], ["Date", "datetime"]], f.object.try(:data_type)), {}, class: "data_type" %></td>
	<td class="center"><%= f.check_box :show %></td>
	<td class="center"><a class="icon-move handle"></a></td>
  <td class="center">
		<%= f.hidden_field :_destroy %>
  	<%= link_to "".html_safe, '#', class: "icon-trash remove_fields", data: { confirm: "Are you sure you want to delete this field?" } %>
  </td>
</tr>